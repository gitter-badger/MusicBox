
.post-author-card(ng-controller="FragmentCtrl", ng-repeat="user in users_of_doc |  orderBy:'kind'")
 .fragment_editor(ng-if="render_layout=='fragments'" ) 
  span 
   i.icon-move( ng-click="_toggle_position('use_authorcard')")

 // TODO needs filter /order/ grouping here see : filter.js
 h6(ng-if="user.kind=='creator' ") {{docmetas.creator_notice}}
 h6(ng-if="user.kind=='editor' ") {{docmetas.editor_notice}}
 
 a(title="Go to url of {{user.username}}",class="post-author-image" , href="{{user.website_url}}")
  span.img-border( title="{{user.username}} avatar", style="background-image:url({{user.profile_image}}); border-color:{{user.color}}; ")
 div.post-author-info
  
  a(style="color:{{user.color}}; ", class="post-author-name", rel="author" ,title="Go to the profile of {{user.username}}" , href="{{user.website_url}}") {{user.username}} 
   span {{user.website_url}}

  p {{user.current_place_city}} {{user.current_place_country}}
  p {{user.short_bio}}
 div.doc-author-icons()
  a(ng-if='has_icon("has_lab", user)')
   i.icon-puzzle-piece
  a(ng-if='has_icon("has_earlyadopter", user)')
   i.icon-beaker(title="early adopter")
  a(ng-if='has_icon("has_outoffrance", user)')
   i.icon-suitcase(title="hors de France")
  a(ng-if='has_icon("has_bitwallet", user)')
   i.icon-btc(title="pay with bitcoins")
