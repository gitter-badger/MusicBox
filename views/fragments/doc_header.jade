div.doc_header()
								
								
								h3(ng-bind-html="doc_options.doc_notices_before_title.value+'&nbsp;'" , class="editing_{{ui.editing_doc_notices_before_title}}" , ng-dblclick="edit_doc_option('doc_notices_before_title')") 
									
								.edit_field(ng-if="ui.editing_doc_notices_before_title")
									label Edit "Before Title"
									input(ng-if="ui.editing_doc_notices_before_title",   ng-model="doc_options.doc_notices_before_title.value", name="doc_options.doc_notices_before_title.value")
									a.btn_ok.float_right(ng-click="edit_doc_option('doc_notices_before_title')") Save




								h1(ng-bind-html="doc.title+'&nbsp;'", ng-dblclick="edit_doc('title')")
								.edit_field(ng-if="ui.editing_title")
									label Edit "Title"
									input(ng-model="doc.title")
									a.btn_ok.float_right(ng-click="edit_doc('title')") Save
								
								h3(ng-bind-html="doc_options.doc_notices_after_title.value+'&nbsp;'" , class="editing_{{ui.editing_doc_notices_after_title}}" , ng-dblclick="edit_doc_option('doc_notices_after_title')") 
									
								.edit_field(ng-if="ui.editing_doc_notices_after_title")
									label Edit "after Title"
									input(ng-if="ui.editing_doc_notices_after_title",   ng-model="doc_options.doc_notices_after_title.value", name="doc_options.doc_notices_after_title.value")
									a.btn_ok.float_right(ng-click="edit_doc_option('doc_notices_after_title')") Save


								time(ng-bind="doc.formated_date", ng-click="" ) 
								
								div.head_left
									div.post-author-info
										p {{i18n.CUSTOM.DOCUMENT.by_author}} 
											span(style="color:{{doc.user.color}};", class="post-author-name", rel="author") {{doc.user.username}} 

								div.sharer
									a(class="twitter-share-icon", ng-class="", href="https://twitter.com/intent/tweet?text={{doc.excerpt}} {{doc.encoded_url}}")
										i.fa.fa-twitter

									a(href="https://www.facebook.com/sharer/sharer.php?u={{doc.encoded_url}}")
										i.fa.fa-facebook-square


							div.doc_editor(ng-if="ui.renderAvailable_active == 'doc_options' ")
								h4 Options du document
								.edit_field_left
									.edit_field.excerpt_field
										label "L'extrait"
										textarea(ng-model="doc.excerpt", name="doc.excerpt")
										i.fa.fa-save(ng-click="edit_doc('excerpt')")
																
									.edit_field.room_field
										label Published in "room" ID : {{doc.room.slug}}
										input(type="text" ,ng-model="doc.room__id", name="doc.room__id")
										i.fa.fa-save(ng-click="edit_doc('room_id')")

							
									.edit_field.user_field
										label User ID : {{doc.user.username}} (transmit ownership)
										input(type="text" ,ng-model="doc.user._id", name="doc.user._id")
										i.fa.fa-save(ng-click="edit_doc('user_id')")

									.edit_field.published_field
										label published
										select(ng-model="doc.published", name="doc.published")
											option(value="{{doc.published}}") {{doc.published}}
											option(value="draft") draft
											option(value="public") public
										i.fa.fa-save(ng-click="edit_doc('published')")



								.edit_field_right
									.edit_field.thumbnai_field
										label "thumbnail" image url
										input(type="text",ng-model="doc.thumbnail", name="doc.thumbnail") 
										i.fa.fa-save(ng-click="edit_doc('thumbnail')")
										img.thumbnail_input( ng-src="{{doc.thumbnail}}")
								
								// ng-if="ui.editing_thumbnail",  


								label Other options
								
								div.doc_options_table
									div.doc_options_item(ng-repeat="opt in doc.doc_options")
										label {{opt.option_name}}
										input(name="doc_options[opt.option_name]", type="text", ng-model="doc_options[opt.option_name].value")
										i.fa.fa-save(ng-click="saveDm(opt.option_name)")
										i.fa.fa-remove(ng-click="deleteDm(opt.option_name)")  

									// i.fa.fa-plus(ng-click='newDm()') new option
								

								// span.secret {{ui.secret}}