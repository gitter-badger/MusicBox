				// a {{ui.renderAvailable_active }}
				// div(class="markup_ markup_type_inline", ng-repeat="r in ui.renderAvailable")
					a(ng-click="toggle_render(r)") {{r}}
				a(ng-click="toggle_render('editor')") editor mode


	div.user_not_in(ng-if="userin.username == '' ")
