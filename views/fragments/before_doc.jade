div(class="branding {{doc_options.branding_class.value}}")
	h1
		a(href="/#!", title="home") 
			span {{doc.room.slug}}

i.fa.fa-cog.inactive.quick_tool_opener(class="inside visible_{{ui.menus.quick_tools.open}}", ng-click="expand_tools('quick_tools')")
div.quick_tools(class="inside visible_{{ui.menus.quick_tools.open}}")
	div.user_in(ng-if="userin.username !== '' ")
			div.user_box
				p
					em 
						a(href="/me/account") {{userin.username}}
				p
					a(ng-click="external_link(root_url+'/signout')")
						i.fa.fa-sign-out log out
				img(ng-src="{{userin.image_url}}")
				
			div.action_box
				p 
					a(href="/doc/create") Create a new doc

				// a(ng-click="push_markup()") push h1
