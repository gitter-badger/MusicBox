	a.btn_ok.btn_section_edit(href="",ng-if="section.selected==false",ng-click="toggle_select_markup(section)") edit section





div(ng-if="section.selected == true ")
	a.btn_section_edit.btn_ok(href="", ng-if="section.selected == true ", ng-click="toggle_select_markup(section)") unselect
	i.fa.fa-remove.btn_action(ng-click="markup_delete(section)")

	// p {{$parent.$parent.$index}}
	p type 
		input(ng-model="section.type" ,type="text")
	p subtype
		input(ng-model="section.subtype" ,type="text")
	p position
		input(ng-model="section.position" ,type="text")
	p start
		input(ng-model="section.start" ,type="text")
	p end
		input(ng-model="section.end", type="text")
	p metadata
		input(ng-model="section.metadata", type="text")
	p status
		input(ng-model="section.status" ,type="text")
	p depth
		input(ng-model="section.depth" type="text" )
	
	// a(ng-click="offset_markup(section)")  section offset 

	i.fa.fa-save.btn_action(ng-click="markup_save(section)")